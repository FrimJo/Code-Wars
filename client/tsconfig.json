{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": [
    "client/**/*.ts"
  ],
    "exclude": [
        "node_modules",
        "dist",
        "server/typings/globals",
        "server/typings/index.d.ts"
    ]
}